#include <stdio.h>
int main()
{
    int month;
    printf("Insert month: ");
    scanf("%d", &month);
    if (month == 4 || month == 6 || month == 9 || month == 11)
    {
        printf("30 days");
    }
    else if (month == 2)
    {
        printf("28 or 29 days");
    }
    else printf("31 days");
    
    
    // ex2
    int num1, num2, num3;
    printf("Insert 3 numbers: ");
    scanf("%d%d%d", &num1, &num2, &num3);
    int maxN = (num1 > num2) ? num1 : num2;
    maxN = (maxN > num3) ? maxN : num3;
    printf("Maximum of 3 numbers is: %d", maxN);
}
